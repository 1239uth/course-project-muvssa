<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            tools:context=".View.AddWorkoutActivity">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/routineLabel2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:layout_marginBottom="13dp"
                    android:gravity="center"
                    android:text="Exercises"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
            <SearchView
                    android:layout_width="match_parent"
                    android:layout_height="34dp"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="413dp">
                <Button
                        android:text="Squat (Barbell)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/button9"/>
                <Button
                        android:text="Reverse Fly (Dumbbell)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/button10"/>
                <Button
                        android:text="Leg Press"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/button11"/>
                <Button
                        android:text="Romanian Deadlift (Barbell)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/button13"/>
                <Button
                        android:text="Deadlift"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/button14"/>
                <Button
                        android:text="Reverse Fly (Cable)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/button15"/>
                <Button
                        android:text="Pull Up"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/button16"/>
                <Button
                        android:text="Push Up"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/button17"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <Button
                        android:text="Add Exercise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/button23"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="146dp" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="60dp" android:layout_marginEnd="148dp"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="68dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>