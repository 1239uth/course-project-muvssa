<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:text="Login IN"
                android:layout_width="167dp"
                android:layout_height="36dp" android:id="@+id/button21"
                app:layout_constraintStart_toEndOf="@+id/editTextTextPersonName17"
                android:layout_marginEnd="26dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="41dp" android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/button22"/>
        <Button
                android:text="sign IN"
                android:layout_width="167dp"
                android:layout_height="36dp" android:id="@+id/button22"
                app:layout_constraintStart_toEndOf="@+id/editTextTextPersonName17"
                android:layout_marginEnd="26dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="41dp" android:layout_marginTop="500dp"
                app:layout_constraintTop_toBottomOf="@+id/textView6" android:layout_marginStart="-190dp"/>
        <TextView
                android:text="Muvssa Fitness Tracker"
                android:layout_width="258dp"
                android:layout_height="27dp" android:id="@+id/textView6"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="44dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="76dp"
                android:layout_marginEnd="77dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/button22"/>
        <EditText
                android:layout_width="173dp"
                android:layout_height="37dp"
                android:inputType="textPersonName"
                android:text="Already have an account?"
                android:ems="10"
                android:id="@+id/editTextTextPersonName17"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="45dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="39dp"
                app:layout_constraintEnd_toStartOf="@+id/button21" android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@+id/button22"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/main" android:id="@+id/imageView13"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="72dp" android:layout_marginBottom="14dp"
                app:layout_constraintBottom_toTopOf="@+id/button22" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>