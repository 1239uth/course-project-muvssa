<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="409dp"
            android:layout_height="729dp" tools:layout_editor_absoluteY="1dp" tools:layout_editor_absoluteX="1dp">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="                             Create Exercise"
                android:ems="10"
                android:id="@+id/editTextTextPersonName2"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Name:"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content" android:id="@+id/textView8" android:layout_weight="1"/>
            <TextView
                android:text="Name"
                android:layout_width="wrap_content"
                android:id="@+id/exerciseName"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Sets:"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" android:id="@+id/textView10" android:layout_weight="1"/>

            <TextView
                android:text="Number of sets"
                android:layout_width="wrap_content"
                android:id="@+id/numberOfSets"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Rest:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView12" android:layout_weight="1"/>

            <TextView
                android:text="Time for rest"
                android:layout_width="wrap_content"
                android:id="@+id/timeForRest"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Muscle Group:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView14" android:layout_weight="1"/>

            <TextView
                android:text="Name of muscle group"
                android:layout_width="wrap_content"
                android:id="@+id/muscleGroup"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                android:text="Save "
                android:layout_width="match_parent"
                android:id="@+id/save_button"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>